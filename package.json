{
  "name": "realworld",
  "version": "1.0.0",
  "description": "fork of realworld app to add e2e tests",
  "main": "index.js",
  "scripts": {
    "postinstall": "run-s ci:client ci:server",
    "ci:client": "cd client && npm ci",
    "ci:server": "cd server && npm ci",
    "build": "cd client && npm run build",
    "start": "concurrently npm:start:client npm:start:server",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm run dev",
    "cy:open": "cypress open",
    "cy:run": "cypress run --spec cypress/integration/localhost/**/*.js",
    "cy:run:local": "start-server-and-test start http://localhost:4100 cy:run"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cypress": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.10.8"
  }
}
